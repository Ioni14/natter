{% extends 'base.html.twig' %}

{% block body %}
    <h2>Login</h2>
    <form id="login">
        <label>Username: <input name="username" type="text" id="username"></label>
        <label>Password: <input name="password" type="password" id="password"></label>
        <button type="submit">Login</button>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script defer src="{{ asset('login.js') }}"></script>
{% endblock %}
